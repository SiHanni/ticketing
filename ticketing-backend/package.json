{
  "name": "ticketing-backend",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "scripts": {
    "dev:user": "pnpm --filter user-service start:dev",
    "dev:event": "pnpm --filter event-service start:dev",
    "dev:seat": "pnpm --filter seat-service start:dev",
    "dev:payment": "pnpm --filter payment-service start:dev",
    "dev:reservation": "pnpm --filter reservation-service start:dev",
    "build:user": "pnpm --filter user-service build",
    "build:event": "pnpm --filter event-service build",
    "build:seat": "pnpm --filter seat-service build",
    "build:payment": "pnpm --filter payment-service build",
    "build:reservation": "pnpm --filter reservation-service build",
    "build": "pnpm --filter @libs/* build && pnpm --filter apps/* build",
    "build:libs": "pnpm --filter @libs/* build"
  },
  "dependencies": {
    "@nestjs-modules/ioredis": "^2.0.2",
    "@nestjs/common": "^10.4.5",
    "@nestjs/core": "^10.4.5",
    "@nestjs/jwt": "^10.0.1",
    "@nestjs/passport": "^10.0.2",
    "@nestjs/platform-express": "^10.4.5",
    "@nestjs/platform-socket.io": "^11.1.5",
    "@nestjs/swagger": "^7.3.1",
    "@nestjs/typeorm": "^11.0.0",
    "bcrypt": "^6.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "ioredis": "^5.3.2",
    "mysql2": "^3.4.2",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "redis": "^5.6.1",
    "reflect-metadata": "^0.1.14",
    "rxjs": "^7.8.2",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "swagger-ui-express": "^5.0.1",
    "typeorm": "^0.3.25"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.9.0",
    "@nestjs/axios": "^4.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/websockets": "^11.1.5",
    "@types/bcrypt": "^6.0.0",
    "@types/node": "^20.9.0",
    "@types/passport-jwt": "^3.0.6",
    "@types/redis": "^4.0.11",
    "artillery": "^2.0.23",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.20.3",
    "typescript": "^5.3.3"
  }
}
